<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LayoutImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idImagenAndroid"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/androidmascot" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/LayoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TableRow
            android:id="@+id/FilaBotones1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnNumerosPrimos"
                style="@style/EstiloBotonesHorizontal"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:text="@string/btnNumerosPrimos" />


            <Button
                android:id="@+id/btnJuegoAciertos"
                style="@style/EstiloBotonesHorizontal"
                android:drawableLeft="@android:drawable/btn_star"
                android:text="@string/btnJuegoAciertos" />
        </TableRow>

        <TableRow
            android:id="@+id/FilaBotones2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnDesplazandoImg"
                style="@style/EstiloBotonesHorizontal"
                android:drawableLeft="@android:drawable/ic_menu_report_image"
                tools:text="@string/btnDesplazandoImg" />

            <Button
                android:id="@+id/btnSeleccionandoImg"
                style="@style/EstiloBotonesHorizontal"
                android:drawableLeft="?android:attr/actionModeCopyDrawable"
                android:text="@string/btnSeleccionandoImg" />
        </TableRow>

    </TableLayout>
</LinearLayout>